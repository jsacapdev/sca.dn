{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServiceName": {
      "type": "string",
      "minLength": 1
    },
    "apiName": {
      "type": "string",
      "minLength": 1
    },
    "appServicePlanSkuName": {
      "type": "string",
      "defaultValue": "S1",
      "allowedValues": [
        "B1",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "appInsightsName": {
      "type": "string"
    }
  },
  "variables": {
  },
  "resources": [
    {
      "name": "[parameters('appServiceName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('appServicePlanSkuName')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "ResourceManagerServicePlan"
      },
      "properties": {
        "name": "[parameters('appServiceName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[parameters('apiName')]",
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanSkuName'))]"
      ],
      "tags": {
        "displayName": "ResourceManagerAppService"
      },
      "properties": {
        "name": "[parameters('apiName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanSkuName'))]",
        "clientAffinityEnabled": false,
        "httpsOnly": true,
        "siteConfig": {
          "AlwaysOn": true,
          "requestTracingEnabled": true,
          "detailedErrorLoggingEnabled": true,
          "httpLoggingEnabled": true
        }
      },
      "resources": [
        {
          "name": "[concat(parameters('apiName'), '/', 'appsettings')]",
          "type": "Microsoft.Web/sites/config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('apiName'))]"
          ],
          "tags": {
            "displayName": "Resource Manager application settings"
          },
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(concat('microsoft.insights/components/', parameters('appInsightsName')), '2015-05-01').InstrumentationKey]"
          }
        }
      ]
    }
  ]
}
